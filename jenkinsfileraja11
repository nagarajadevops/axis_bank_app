node{
    def mavenHome = tool name: "maven3.8.5"
echo "The node name is: ${NODE_NAME}"
properties([buildDiscarder(logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '', numToKeepStr: '5')), [$class: 'JobLocalConfiguration', changeReasonComment: '']])

    stage('git clone'){
        git branch: 'development', credentialsId: '7e41adad-56cd-4ccd-92fa-32f71492a7dc', url: 'https://github.com/nagarajadevops/maven-web-application-m.git'
    }
    stage('Build'){
        sh "$mavenHome/bin/mvn clean package"
    }
    stage('Deploy App in Tomcat'){
        sshagent(['Tomcat-linux-server']) {
            sh 'scp -o StrictHostKeyChecking=no target/maven-web-application.war ec2-user@65.2.40.187:/home/ec2-user/apache-tomcat-9.0.80/webapps'
        
    
}
    }
  
    
    
    
    
    
    
    
}
